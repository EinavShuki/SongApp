<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animation_back"
    android:id="@+id/scrollView"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--    //BUTTONS AREA-->
        <LinearLayout
            android:id="@+id/top_btns"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1.3"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_letter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/up_btns"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/add_L"
                android:textSize="15sp" />

            <Button
                android:id="@+id/reveal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/up_btns"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/reveal_song"
                android:textSize="15sp" />

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/up_btns"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/clear"
                android:textSize="15sp" />
        </LinearLayout>

        <!--    PICTURES AREA-->
        <LinearLayout
            android:id="@+id/pic_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:layout_weight="4"
            android:background="@color/lilach"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/bet_img"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/sweet" />

            <ImageView
                android:id="@+id/afro_img"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/bob_marley" />

        </LinearLayout>
        <!--    / BUTTON PLACE-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">

            <Button
                android:id="@+id/check_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/up_btns"
                android:gravity="center"
                android:text="@string/check"
                android:textSize="20sp" />
        </LinearLayout>
        <!--    EDITTEXT_PLACE-->
        <LinearLayout
            android:id="@+id/txt_place"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/char1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/edit_txt"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="1" />

            <EditText
                android:id="@+id/char2"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/edit_txt"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="1" />

            <EditText
                android:id="@+id/char3"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/edit_txt"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="1" />

            <EditText
                android:id="@+id/char4"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/edit_txt"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="1" />


            <TextView
                android:id="@+id/tab"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:maxLength="1"
                android:text="-"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/txt2_place"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/char5"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/edit_txt"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="1" />


            <EditText
                android:id="@+id/char6"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/edit_txt"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="1" />

            <EditText
                android:id="@+id/char7"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/edit_txt"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="1" />

            <EditText
                android:id="@+id/char8"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/edit_txt"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="1" />

            <EditText
                android:id="@+id/char9"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/edit_txt"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="1" />

            <EditText
                android:id="@+id/char10"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/edit_txt"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="1" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>